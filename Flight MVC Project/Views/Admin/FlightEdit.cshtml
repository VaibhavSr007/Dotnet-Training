@model flightProject.Models.VsFlight

@{
    ViewData["Title"] = "FlightEdit";
}

<h1 class="text-center" style=" margin-top: 30px">Edit Flight</h1>

<hr />
<div class="row" style="margin-left: 40%;">
    <div class="col-md-4">
        <form asp-action="FlightEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
                <input asp-for="FlightId" class="form-control" readonly/>
                <span asp-validation-for="FlightId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightName" class="control-label"></label>
                <input asp-for="FlightName" class="form-control" />
                <span asp-validation-for="FlightName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Src" class="control-label"></label>
                <input asp-for="Src" class="form-control" />
                <span asp-validation-for="Src" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dest" class="control-label"></label>
                <input asp-for="Dest" class="form-control" />
                <span asp-validation-for="Dest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px; margin-left: 90px; margin-bottom: 20px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div  class="text-center">
    <a asp-action="GetAllFlights">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
