@model flightProject.Models.VsCustomer

@{
    ViewData["Title"] = "EditCustomerDetail";
}

<h1 class="text-center" style=" margin-top: 30px">Edit Detail</h1>

<hr />
<div class="row" style="margin-left: 40%;">
    <div class="col-md-4" >
        <form asp-action="EditCustomerDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" readonly/>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPass" class="control-label"></label>
                <input asp-for="CustomerPass" class="form-control" />
                <span asp-validation-for="CustomerPass" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="ConfirmPass" class="control-label"></label>
                <input asp-for="ConfirmPass" class="form-control" />
                <span asp-validation-for="ConfirmPass" class="text-danger"></span>
            </div> *@
            <div class="form-group" style="margin-top: 20px; margin-left: 90px; margin-bottom: 20px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="CustomerDetail">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
