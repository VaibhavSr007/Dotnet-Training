@model flightProject.Models.flights

@{
    ViewData["Title"] = "FlightDelete";
}

<h1 class="text-center" style=" margin-top: 30px">Remove Flight</h1>

<h3 class="text-center">Are you sure you want to Remove this Flight?</h3>
<hr />
<div style="margin-left: 42%;">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlightId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlightName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Src)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Src)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dest)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dest)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
    </dl>
    
    <form  style="margin-top: 20px;  margin-bottom: 20px" asp-action="FlightDelete">
        <input type="submit" value="Delete" class="btn btn-danger" /> ||
        <a asp-action="GetAllFlights">Back to List</a>
    </form>
</div>
